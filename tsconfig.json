{
  "compilerOptions": {
    "typeRoots": [
      "@types",
      "./node_modules/@types",
      "./node_modules/socket.io/dist"
    ],
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@middleware/*": ["./middleware/*"],
      "@utils/*": ["./utils/*"],
      "@models/*": ["./models/*"],
      "@services/*": ["./services/*"],
      "@mails/*": ["./mails/*"],
      "@config/*": ["./config/*"],
      "@validates/*": ["./http/validates/*"],
    },
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["."],
  "exclude": ["node_modules", "./dist"]
}